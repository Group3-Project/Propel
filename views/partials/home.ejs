<script type="text/javascript">
	function checkLogin (id) {
		if(<%= user_id!= null %>){
			socket.emit('clickgame', {user_id : <%= user.id %>, game_id : id });
			window.location.href = "/gameView/" + id;
		}else{
			if (confirm("You must log in!")) {
		        window.location.href = "/auth/facebook";
		    } 
		}
	}
</script>

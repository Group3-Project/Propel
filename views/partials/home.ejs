  	<div class="container main-area">
	<% if (typeof user == 'object' && user) { %>
  		<% var user_id = user.id; %>
	<%}else{ var user_id = null; }%>

	<!-- ROW 1 -->
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<img class=" hero-item" src="http://brick-inquirer.com/wp-content/uploads/2016/06/LFayqug-1.jpg" draggable="false">
			</div>
		</div>
	</div>

	<!-- ROW 2 -->
	<div class="row">
		<div class="col-lg-6 col-md-12" onclick = "checkLogin()">
			<div class="card card-item">
				<span class="card-head"><%= game_list[0].name %></span>
					<img class="hero-item" src = "<%= game_list[0].thumb %>">
			</div>
		</div>
		<div class="col-lg-3 col-md-6" onclick = "checkLogin()">
			<div class="card card-item">
				<span class="card-head"><%= game_list[0].name %></span>
				<%=
				socket.emit('GameName',{game_list[0].name});
				%>
					<img class="hero-item" src = "<%= game_list[0].thumb %>">
			</div>
		</div>
		<div class="col-lg-3 col-md-6">
			<div class="card card-item">
				<span class="card-head">Arcade</span>
			</div>
		</div>
	</div>

		<!-- ROW 3 -->
	<div class="row">
		<div class="col-lg-3 col-md-6">
			<div class="card card-item">
				<span class="card-head">Racing</span>
			</div>
		</div>
		<div class="col-lg-3 col-md-6" >
			<div class="card card-item" >
				<span class="card-head">Simulator</span>
			</div>
		</div>
		<div class="col-lg-3 col-md-6">
			<div class="card card-item">
				<span class="card-head">Turn-Based</span>
			</div>
		</div>
		<div class="col-lg-3 col-md-6">
			<div class="card card-item">
				<span class="card-head">Puzzle</span>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	function checkLogin () {
		if(<%= user_id!= null %>){
			window.location.href = "/gameView/<%= game_list[0].id %>";
		}else{
			if (confirm("You must log in!")) {
		        window.location.href = "/auth/facebook";
		    } 
		}
	}
</script>
